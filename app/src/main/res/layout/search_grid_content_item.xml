<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="30dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_search_content_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_search_content"
            android:layout_width="155dp"
            android:layout_height="155dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="11dp"
            android:src="@drawable/ic_search_content_blank_bookmark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="150dp"
        android:layout_height="72dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_search_content_top">

        <TextView
            android:id="@+id/tv_search_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="말티즈"
            android:textAppearance="@style/TextAppearance.FindU.Head3_SB_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_search_content_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2024-11-23"
            android:textAppearance="@style/TextAppearance.FindU.caption_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_search_content_name" />

        <ImageView
            android:id="@+id/iv_search_content_address"
            android:layout_width="12dp"
            android:layout_height="15dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ic_search_content_location"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_search_content_date" />

        <TextView
            android:id="@+id/tv_search_content_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="성산구 내동 628-1"
            android:textAppearance="@style/TextAppearance.FindU.Body2_SB_14"
            app:layout_constraintStart_toEndOf="@id/iv_search_content_address"
            app:layout_constraintTop_toBottomOf="@id/tv_search_content_date" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>