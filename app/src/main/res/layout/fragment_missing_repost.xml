<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.report.MissingReportFragment">

    <TextView
        android:id="@+id/tv_report_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31.16dp"
        android:text="@string/report_witness"
        android:textAppearance="@style/TextAppearance.FindU.Head3_SB_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_report_top_title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_report_image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_report_upload_image_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:text="@string/report_upload_image_title"
                    android:textAppearance="@style/TextAppearance.FindU.Body1_SB_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_report_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingHorizontal="20dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@id/tv_report_upload_image_title"
                    tools:listitem="@layout/item_witness_report_uploaded_image" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_report_species_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/cl_report_image_container">

                <TextView
                    android:id="@+id/tv_report_species_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_species_title"
                    android:textAppearance="@style/TextAppearance.FindU.Body1_SB_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioGroup
                    android:id="@+id/rg_report_species"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tv_report_species_title">

                    <RadioButton
                        android:id="@+id/rb_report_dog_button"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="105"
                        android:background="@drawable/bg_radio_button_left"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/report_species_dog"
                        android:textAppearance="@style/TextAppearance.FindU.Body2_SB_14" />

                    <RadioButton
                        android:id="@+id/rb_report_cat_button"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="110"
                        android:background="@drawable/bg_radio_button_center"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/report_species_cat"
                        android:textAppearance="@style/TextAppearance.FindU.Body2_SB_14" />

                    <RadioButton
                        android:id="@+id/rb_report_extra_button"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="105"
                        android:background="@drawable/bg_radio_button_right"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/report_species_extra"
                        android:textAppearance="@style/TextAppearance.FindU.Body2_SB_14" />

                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_report_breed_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/cl_report_species_container">

                <TextView
                    android:id="@+id/tv_report_breed_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_breed_title"
                    android:textAppearance="@style/TextAppearance.FindU.Body1_SB_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/et_report_breed_field"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_edit_text_breed"
                    android:drawableEnd="@drawable/img_report_arrow_down_16_g5"
                    android:enabled="false"
                    android:hint="@string/report_breed_input_hint"
                    android:paddingStart="12dp"
                    android:paddingEnd="10dp"
                    android:textAppearance="@style/TextAppearance.FindU.Body2_SB_14"
                    app:layout_constraintTop_toBottomOf="@id/tv_report_breed_title" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_report_breeds_recycler_container"
                    android:layout_width="match_parent"
                    android:layout_height="248dp"
                    android:background="@drawable/bg_white_bottom_radius_8"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/et_report_breed_field">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_report_breeds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--end of rv container-->
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--end of breed container-->
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_report_gender_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/cl_report_breed_container">

                <TextView
                    android:id="@+id/tv_report_gender_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_gender_title"
                    android:textAppearance="@style/TextAppearance.FindU.Body1_SB_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioGroup
                    android:id="@+id/rg_report_genders"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tv_report_gender_title">

                    <RadioButton
                        android:id="@+id/rb_report_male_button"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="105"
                        android:background="@drawable/bg_radio_button_left"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/male_gender"
                        android:textAppearance="@style/TextAppearance.FindU.Body2_SB_14" />

                    <RadioButton
                        android:id="@+id/rb_report_female_button"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="110"
                        android:background="@drawable/bg_radio_button_center"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/female_gender"
                        android:textAppearance="@style/TextAppearance.FindU.Body2_SB_14" />

                    <RadioButton
                        android:id="@+id/rb_report_unknown_button"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_weight="105"
                        android:background="@drawable/bg_radio_button_right"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/unknown_gender"
                        android:textAppearance="@style/TextAppearance.FindU.Body2_SB_14" />

                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_report_color_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/cl_report_gender_container">

                <TextView
                    android:id="@+id/tv_report_color_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/report_color_title"
                    android:textAppearance="@style/TextAppearance.FindU.Body1_SB_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_report_colors"
                    android:layout_width="wrap_content"
                    android:layout_height="83dp"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_report_color_title"
                    tools:listitem="@layout/item_report_colors" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_report_feature_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/cl_report_color_container">

                <TextView
                    android:id="@+id/tv_report_feature_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/report_feature_title"
                    android:textAppearance="@style/TextAppearance.FindU.Body1_SB_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_report_feature_title">

                    <!--  physical feature  -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_report_physical_feature_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="105"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_report_feature_title">


                        <TextView
                            android:id="@+id/tv_report_physical_feature_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/report_physical_feature"
                            android:textAppearance="@style/TextAppearance.FindU.Body2_SB_14"
                            android:textColor="@color/gray5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_report_physical_features"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintHorizontal_weight="105"
                            app:layout_constraintTop_toBottomOf="@id/tv_report_physical_feature_title"
                            tools:itemCount="5"
                            tools:listitem="@layout/item_feature_chip" />
                        <!-- end of physical features -->
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!--  external feature  -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_report_external_feature_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="116"
                        app:layout_constraintStart_toEndOf="@id/cl_report_physical_feature_container"
                        app:layout_constraintTop_toBottomOf="@id/tv_report_feature_title">


                        <TextView
                            android:id="@+id/tv_report_external_feature_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/report_external_feature"
                            android:textAppearance="@style/TextAppearance.FindU.Body2_SB_14"
                            android:textColor="@color/gray5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_report_external_features"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintHorizontal_weight="110"
                            app:layout_constraintTop_toBottomOf="@id/tv_report_external_feature_title"
                            tools:itemCount="5"
                            tools:listitem="@layout/item_feature_chip" />
                        <!-- end of external features -->
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!--  character feature  -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_report_character_feature_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="108"
                        app:layout_constraintStart_toEndOf="@id/cl_report_external_feature_container"
                        app:layout_constraintTop_toBottomOf="@id/tv_report_feature_title">

                        <TextView
                            android:id="@+id/tv_report_character_feature_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/report_character_feature"
                            android:textAppearance="@style/TextAppearance.FindU.Body2_SB_14"
                            android:textColor="@color/gray5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_report_character_features"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            app:layout_constraintHorizontal_weight="105"
                            app:layout_constraintTop_toBottomOf="@id/tv_report_character_feature_title"
                            tools:itemCount="5"
                            tools:listitem="@layout/item_feature_chip" />

                        <!-- end of character features -->
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>


                <!--  end of feature container  -->
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_report_description_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/cl_report_feature_container">

                <TextView
                    android:id="@+id/tv_report_description_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가 설명 작성하기"
                    android:textAppearance="@style/TextAppearance.FindU.Body2_SB_14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_report_description_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="(옵션)"
                    android:textAppearance="@style/TextAppearance.FindU.caption_12"
                    android:textColor="@color/gray3"
                    app:layout_constraintBottom_toBottomOf="@id/tv_report_description_title"
                    app:layout_constraintStart_toEndOf="@id/tv_report_description_title" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_edit_text_description"
                    android:hint="자유롭게 추가 설명을 작성해주세요!\n\n\n"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="10dp"
                    android:textAppearance="@style/TextAppearance.FindU.caption_12"
                    app:layout_constraintTop_toBottomOf="@id/tv_report_description_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_report_date_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:paddingBottom="170dp"
                app:layout_constraintTop_toBottomOf="@id/cl_report_description_container">

                <TextView
                    android:id="@+id/tv_report_date_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="발견 날짜"
                    android:textAppearance="@style/TextAppearance.FindU.Body2_SB_14"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- TODO : 날짜 선택 컴포넌트 구현 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="254dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_report_date_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>