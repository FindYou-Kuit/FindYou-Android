<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.report.ReportCameraFragment">

    <androidx.camera.view.PreviewView
        android:id="@+id/pv_report_camera_view_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="160dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_report_camera_capture_image"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/bg_button_report_dialog"
        android:backgroundTint="@null"
        android:text="@string/report_dialog_capture"
        android:textAppearance="@style/TextAppearance.FindU.Head3_SB_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pv_report_camera_view_finder" />

</androidx.constraintlayout.widget.ConstraintLayout>