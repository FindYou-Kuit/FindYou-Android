<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_report_uploaded_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="9dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_sample_dog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small" />

    <ImageView
        android:id="@+id/iv_report_uploaded_image_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_report_close_18"
        app:layout_constraintEnd_toEndOf="@id/iv_report_uploaded_image"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_report_uploaded_ai_distinction"
        android:layout_width="0dp"
        android:layout_height="21dp"
        android:background="@drawable/bg_button_ai"
        android:text="@string/report_ai_distinction"
        android:textAppearance="@style/TextAppearance.FindU.caption_12"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/iv_report_uploaded_image"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@id/iv_report_uploaded_image"
        app:layout_constraintStart_toStartOf="@id/iv_report_uploaded_image" />

</androidx.constraintlayout.widget.ConstraintLayout>